datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @default(autoincrement()) @id
  name          String?
  email         String?   @unique
  password      String?   
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  transactions  Transaction[]

  @@map(name: "users")
}

model Transaction {
  id              Int       @default(autoincrement()) @id
  transactionId   String
  members         User      @relation(fields: [senderId, receiverId], references: [id, id])
  senderId        Int
  receiverId      Int
  currencies      Currency  @relation(fields: [sendCurrency, receiveCurrency], references: [id, id])
  sendCurrency    Int
  receiveCurrency Int
  rate            Float
  amount          Float
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")

  @@map(name: "transactions")
}

model Currency {
  id              Int       @default(autoincrement()) @id
  name            String
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")
  transactions  Transaction[]

  @@map(name: "currencies")
}

