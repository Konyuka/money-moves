datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int       @default(autoincrement()) @id
  name              String?
  email             String?   @unique
  password          String?   
  createdAt         DateTime  @default(now()) @map(name: "created_at")
  updatedAt         DateTime  @updatedAt @map(name: "updated_at")
  sentTransactions  Transaction[] @relation("sender")
  receivedTransactions  Transaction[] @relation("receiver")

  @@map(name: "users")
}

model Transaction {
  id              Int       @default(autoincrement()) @id
  sender          User?      @relation("sender", fields: [senderId], references: [id])
  senderId        Int
  receiver        User?      @relation("receiver", fields: [receiverId], references: [id])
  receiverId      Int
  SCurrency      Currency  @relation("scurrency", fields: [sendCurrency], references: [id])
  sendCurrency    Int
  RCurrency      Currency  @relation("rcurrency", fields: [receiveCurrency], references: [id])
  receiveCurrency Int
  rate            Float
  amount          Float
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")

  @@map(name: "transactions")
}

model Currency {
  id              Int       @default(autoincrement()) @id
  name            String
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")
  stransactions  Transaction[] @relation("scurrency")
  rtransactions  Transaction[] @relation("rcurrency")

  @@map(name: "currencies")
}

